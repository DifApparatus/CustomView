<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/showButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/buttonMarginHorizontal"
            android:layout_marginStart="@dimen/buttonMarginHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/buttonMarginHorizontal"
            android:layout_marginRight="@dimen/buttonMarginHorizontal"
            app:layout_constraintHorizontal_bias="0.273"
            android:layout_marginTop="@dimen/buttonMarginTop"
            app:layout_constraintTop_toBottomOf="@+id/paintwidget"/>
    <Button
            android:text="@string/hideButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hideButton"
            app:layout_constraintStart_toEndOf="@+id/showButton"
            android:layout_marginLeft="@dimen/buttonMarginHorizontal"
            android:layout_marginStart="@dimen/buttonMarginHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/buttonMarginHorizontal"
            android:layout_marginRight="@dimen/buttonMarginHorizontal"
            app:layout_constraintTop_toTopOf="@+id/showButton"
            app:layout_constraintBottom_toBottomOf="@+id/showButton"/>
    <com.e.paintwidget.PaintWidget
            android:id="@+id/paintwidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/paintWidgetMargin"
            android:layout_marginStart="@dimen/paintWidgetMargin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/paintWidgetMargin"
            android:layout_marginRight="@dimen/paintWidgetMargin"
            android:layout_marginTop="@dimen/paintWidgetMargin"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>